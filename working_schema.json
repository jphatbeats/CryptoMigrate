                    "status": {"type": "string"},
                    "timestamp": {"type": "string"},
                    "server": {"type": "string"},
                    "version": {"type": "string"},
                    "endpoints_available": {
                      "type": "array",
                      "items": {"type": "string"}
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/": {
