              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "timestamp": { "type": "string" },
                    "balances": {
                      "type": "object",
                      "properties": {
                        "bingx": {
                          "type": "object",
                          "properties": {
                            "status": { "type": "string" },
                            "data": { "type": "object" }
                          }
                        },
                        "blofin": {
                          "type": "object",
                          "properties": {
                            "status": { "type": "string" },
                            "data": { "type": "object" }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/live/bingx-positions": {
      "get": {
        "description": "Get live positions from BingX exchange",
        "operationId": "getBingXPositions",
        "responses": {
          "200": {
            "description": "BingX positions and orders",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "timestamp": { "type": "string" },
                    "source": { "type": "string" },
                    "positions": {
                      "type": "object",
                      "properties": {
                        "code": { "type": "integer" },
                        "data": {
                          "type": "object",
                          "properties": {
                            "positions": {
                              "type": "array",
                              "items": { "type": "object" }
                            }
                          }
                        }
                      }
                    },
                    "orders": {
                      "type": "object",
                      "properties": {
                        "code": { "type": "integer" },
                        "data": {
                          "type": "object",
                          "properties": {
                            "orders": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "symbol": { "type": "string" },
                                  "positionSide": { "type": "string" },
                                  "leverage": { "type": "string" },
                                  "status": { "type": "string" },
                                  "avgPrice": { "type": "string" },
                                  "stopLoss": { "type": "object" },
                                  "takeProfit": { "type": "object" }
