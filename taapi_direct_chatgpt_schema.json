{
  "openapi": "3.1.0",
  "info": {
    "title": "Taapi.io Direct API - 208+ Technical Indicators",
    "description": "Direct access to taapi.io's comprehensive technical analysis API. Get up to 20 indicators per bulk request from 208+ available indicators. Covers all major categories: trend, momentum, volatility, volume, and advanced indicators.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.taapi.io",
      "description": "Taapi.io Official API Server"
    }
  ],
  "paths": {
    "/bulk": {
      "post": {
        "summary": "Bulk Technical Indicators Request (Up to 20 indicators)",
        "description": "Efficiently retrieve multiple technical indicators in a single request. Supports all 208+ indicators available from taapi.io including RSI, MACD, Bollinger Bands, Supertrend, Ichimoku, Parabolic SAR, and many more.",
        "operationId": "getBulkIndicators",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["secret", "construct"],
                "properties": {
                  "secret": {
                    "type": "string",
                    "description": "Your taapi.io API key",
                    "example": "YOUR_TAAPI_SECRET"
                  },
                  "construct": {
                    "type": "object",
                    "required": ["exchange", "symbol", "interval", "indicators"],
                    "properties": {
                      "exchange": {
                        "type": "string",
                        "description": "Exchange to get data from",
                        "enum": ["binance", "binancefutures", "bybit", "okx", "kucoin", "gate", "huobi", "bitget"],
                        "default": "binance",
                        "example": "binance"
                      },
                      "symbol": {
                        "type": "string",
                        "description": "Trading pair symbol with forward slash (e.g., BTC/USDT, ETH/USDT)",
                        "example": "BTC/USDT"
                      },
                      "interval": {
                        "type": "string",
                        "description": "Time interval for analysis",
                        "enum": ["1m", "5m", "15m", "30m", "1h", "2h", "4h", "12h", "1d", "1w"],
                        "example": "1h"
                      },
                      "type": {
                        "type": "string",
                        "description": "Asset type",
                        "enum": ["crypto", "stocks"],
                        "default": "crypto"
                      },
                      "indicators": {
                        "type": "array",
                        "description": "Array of indicator objects (maximum 20 per request)",
                        "maxItems": 20,
                        "minItems": 1,
                        "items": {
                          "type": "object",
                          "required": ["indicator"],
                          "properties": {
                            "id": {
                              "type": "string",
                              "description": "Custom identifier for tracking this indicator result",
                              "example": "rsi_14_custom"
                            },
                            "indicator": {
                              "type": "string",
                              "description": "Indicator name from 208+ available indicators. Popular ones: rsi, macd, bbands, ema, sma, stoch, willr, adx, cci, supertrend, ichimoku, sar, ao, obv, atr, keltner, donchian, tema, dema, kama, mama, roc, mfi, etc.",
                              "example": "rsi"
                            },
                            "period": {
                              "type": "integer",
                              "description": "Period for the indicator (where applicable)",
                              "minimum": 1,
                              "maximum": 1000,
                              "example": 14
                            },
                            "fast_period": {
                              "type": "integer",
                              "description": "Fast period for MACD and similar indicators",
                              "example": 12
                            },
                            "slow_period": {
                              "type": "integer",
                              "description": "Slow period for MACD and similar indicators", 
                              "example": 26
                            },
                            "signal_period": {
                              "type": "integer",
                              "description": "Signal period for MACD",
                              "example": 9
                            },
                            "stddev": {
                              "type": "number",
                              "description": "Standard deviation for Bollinger Bands",
                              "example": 2.0
                            },
                            "multiplier": {
                              "type": "number",
                              "description": "Multiplier for Supertrend and similar indicators",
                              "example": 3.0
                            },
                            "k_period": {
                              "type": "integer",
                              "description": "K period for Stochastic oscillator",
                              "example": 14
                            },
                            "d_period": {
                              "type": "integer",
                              "description": "D period for Stochastic oscillator",
                              "example": 3
                            },
                            "backtrack": {
                              "type": "integer",
                              "description": "Number of candles to backtrack (0-50)",
                              "minimum": 0,
                              "maximum": 50,
                              "default": 0
                            },
                            "results": {
                              "type": "integer",
                              "description": "Number of historical results to return (1-20)",
                              "minimum": 1,
                              "maximum": 20,
                              "default": 1
                            },
                            "chart": {
                              "type": "string",
                              "description": "Chart type for calculations",
                              "enum": ["candles", "heikinashi"],
                              "default": "candles"
                            },
                            "addResultTimestamp": {
                              "type": "boolean",
                              "description": "Add timestamp to each result",
                              "default": false
                            }
                          }
                        },
                        "example": [
                          {
                            "id": "rsi_14",
                            "indicator": "rsi",
                            "period": 14
                          },
                          {
                            "id": "supertrend_custom",
                            "indicator": "supertrend",
                            "period": 10,
                            "multiplier": 3.0
                          },
                          {
                            "id": "ichimoku_cloud",
                            "indicator": "ichimoku"
                          }
                        ]
                      }
                    }
                  }
                }
              },
              "examples": {
                "comprehensive_crypto_analysis": {
                  "summary": "Comprehensive Crypto Analysis",
                  "description": "Mix of popular and advanced indicators for thorough market analysis",
                  "value": {
                    "secret": "YOUR_TAAPI_SECRET",
                    "construct": {
                      "exchange": "binance",
                      "symbol": "BTC/USDT",
                      "interval": "1h",
                      "indicators": [
                        {"id": "rsi_14", "indicator": "rsi", "period": 14},
                        {"id": "macd_default", "indicator": "macd"},
                        {"id": "bb_20", "indicator": "bbands", "period": 20, "stddev": 2.0},
                        {"id": "supertrend", "indicator": "supertrend", "period": 10, "multiplier": 3.0},
                        {"id": "ichimoku", "indicator": "ichimoku"},
                        {"id": "ema_20", "indicator": "ema", "period": 20},
                        {"id": "ema_50", "indicator": "ema", "period": 50},
                        {"id": "obv", "indicator": "obv"},
                        {"id": "atr", "indicator": "atr", "period": 14}
                      ]
                    }
                  }
                },
                "advanced_momentum_analysis": {
                  "summary": "Advanced Momentum Indicators",
                  "description": "Focus on momentum and oscillator indicators",
                  "value": {
                    "secret": "YOUR_TAAPI_SECRET",
                    "construct": {
                      "exchange": "binance", 
                      "symbol": "ETH/USDT",
                      "interval": "4h",
                      "indicators": [
                        {"id": "rsi_21", "indicator": "rsi", "period": 21},
                        {"id": "stoch_fast", "indicator": "stoch", "k_period": 14, "d_period": 3},
                        {"id": "willr", "indicator": "willr", "period": 14},
                        {"id": "cci", "indicator": "cci", "period": 20},
                        {"id": "awesome_osc", "indicator": "ao"},
                        {"id": "roc", "indicator": "roc", "period": 12},
                        {"id": "mfi", "indicator": "mfi", "period": 14}
                      ]
                    }
                  }
                },
                "volatility_and_volume": {
                  "summary": "Volatility and Volume Analysis",
                  "description": "Comprehensive volatility and volume indicators",
                  "value": {
                    "secret": "YOUR_TAAPI_SECRET",
                    "construct": {
                      "exchange": "binance",
                      "symbol": "XRP/USDT", 
                      "interval": "1d",
                      "indicators": [
                        {"id": "atr_14", "indicator": "atr", "period": 14},
                        {"id": "keltner", "indicator": "keltner", "period": 20},
                        {"id": "donchian", "indicator": "donchian", "period": 20},
                        {"id": "obv", "indicator": "obv"},
                        {"id": "ad_line", "indicator": "ad"},
                        {"id": "cmf", "indicator": "cmf", "period": 20},
                        {"id": "ease_of_movement", "indicator": "eom", "period": 14}
                      ]
                    }
                  }
                },
                "advanced_trend_analysis": {
                  "summary": "Advanced Trend Following",
                  "description": "Sophisticated trend analysis with multiple moving averages",
                  "value": {
                    "secret": "YOUR_TAAPI_SECRET",
                    "construct": {
                      "exchange": "binance",
                      "symbol": "SOL/USDT",
                      "interval": "2h", 
                      "indicators": [
                        {"id": "tema_21", "indicator": "tema", "period": 21},
                        {"id": "dema_34", "indicator": "dema", "period": 34},
                        {"id": "kama_30", "indicator": "kama", "period": 30},
                        {"id": "mama", "indicator": "mama"},
                        {"id": "parabolic_sar", "indicator": "sar"},
                        {"id": "adx_trend", "indicator": "adx", "period": 14},
                        {"id": "aroon", "indicator": "aroon", "period": 14}
                      ]
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful bulk indicators response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "description": "The indicator ID from the request"
                          },
                          "result": {
                            "type": "object",
                            "description": "The indicator calculation result(s)"
                          },
                          "errors": {
                            "type": "array",
                            "description": "Any errors for this specific indicator"
                          }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "successful_bulk_response": {
                    "summary": "Successful Multi-Indicator Response",
                    "value": {
                      "data": [
                        {
                          "id": "rsi_14",
                          "result": {"value": 67.84},
                          "errors": []
                        },
                        {
                          "id": "supertrend",
                          "result": {
                            "value": 42150.25,
                            "trend": "bullish"
                          },
                          "errors": []
                        },
                        {
                          "id": "ichimoku",
                          "result": {
                            "tenkan_sen": 42100.5,
                            "kijun_sen": 41950.25,
                            "senkou_span_a": 42025.375,
                            "senkou_span_b": 41800.0,
                            "chikou_span": 42200.0
                          },
                          "errors": []
                        },
                        {
                          "id": "macd_default",
                          "result": {
                            "valueMACD": 156.23,
                            "valueMACDSignal": 142.15,
                            "valueMACDHist": 14.08
                          },
                          "errors": []
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid parameters",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Invalid symbol format. Use format like BTC/USDT"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object", 
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Invalid API key"
                    }
                  }
                }
              }
            }
          },
          "429": {
            "description": "Rate limit exceeded",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Rate limit exceeded. Please wait before making more requests."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "secret",
        "description": "Taapi.io API key"
      }
    },
    "schemas": {
      "BulkRequest": {
        "type": "object",
        "required": ["secret", "construct"],
        "properties": {
          "secret": {
            "type": "string",
            "description": "Your taapi.io API key"
          },
          "construct": {
            "$ref": "#/components/schemas/Construct"
          }
        }
      },
      "Construct": {
        "type": "object",
        "required": ["exchange", "symbol", "interval", "indicators"],
        "properties": {
          "exchange": {"type": "string"},
          "symbol": {"type": "string"},
          "interval": {"type": "string"},
          "type": {"type": "string"},
          "indicators": {
            "type": "array",
            "items": {"$ref": "#/components/schemas/IndicatorSpec"}
          }
        }
      },
      "IndicatorSpec": {
        "type": "object",
        "required": ["indicator"],
        "properties": {
          "id": {"type": "string"},
          "indicator": {"type": "string"},
          "period": {"type": "integer"},
          "fast_period": {"type": "integer"},
          "slow_period": {"type": "integer"},
          "signal_period": {"type": "integer"},
          "stddev": {"type": "number"},
          "multiplier": {"type": "number"},
          "k_period": {"type": "integer"},
          "d_period": {"type": "integer"},
          "backtrack": {"type": "integer"},
          "results": {"type": "integer"},
          "chart": {"type": "string"},
          "addResultTimestamp": {"type": "boolean"}
        }
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ]
}