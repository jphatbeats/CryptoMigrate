{
  "openapi": "3.1.0",
  "info": {
    "title": "Taapi.io Proxy for ChatGPT - 208+ Technical Indicators",
    "description": "ChatGPT-accessible proxy to taapi.io's comprehensive technical analysis API. Get up to 20 indicators per bulk request from 208+ available indicators through your Railway server with CORS support.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://titan-trading-2-production.up.railway.app",
      "description": "Railway Production Server (Proxy to taapi.io)"
    },
    {
      "url": "http://localhost:5000",
      "description": "Local Development Server"
    }
  ],
  "paths": {
    "/api/taapi/proxy": {
      "post": {
        "summary": "Taapi.io Bulk Indicators Proxy (208+ indicators available)",
        "description": "ChatGPT-accessible proxy endpoint that forwards bulk requests to taapi.io API. Supports all 208+ technical indicators including RSI, MACD, Supertrend, Ichimoku, Parabolic SAR, OBV, ATR, and many more. Up to 20 indicators per request.",
        "operationId": "getTaapiIndicators",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["secret", "construct"],
                "properties": {
                  "secret": {
                    "type": "string",
                    "description": "Your taapi.io API key",
                    "example": "YOUR_TAAPI_SECRET"
                  },
                  "construct": {
                    "type": "object",
                    "required": ["exchange", "symbol", "interval", "indicators"],
                    "properties": {
                      "exchange": {
                        "type": "string",
                        "description": "Exchange to get data from",
                        "enum": ["binance", "binancefutures", "bybit", "okx", "kucoin", "gate", "huobi", "bitget"],
                        "default": "binance",
                        "example": "binance"
                      },
                      "symbol": {
                        "type": "string",
                        "description": "Trading pair symbol with forward slash (e.g., BTC/USDT, ETH/USDT, BONK/USDT)",
                        "example": "BTC/USDT"
                      },
                      "interval": {
                        "type": "string",
                        "description": "Time interval for analysis",
                        "enum": ["1m", "5m", "15m", "30m", "1h", "2h", "4h", "12h", "1d", "1w"],
                        "example": "1h"
                      },
                      "type": {
                        "type": "string",
                        "description": "Asset type",
                        "enum": ["crypto", "stocks"],
                        "default": "crypto"
                      },
                      "indicators": {
                        "type": "array",
                        "description": "Array of indicator objects (maximum 20 per request). Available indicators include: rsi, macd, bbands, ema, sma, stoch, willr, adx, cci, supertrend, ichimoku, sar, ao, obv, atr, keltner, donchian, tema, dema, kama, mama, roc, mfi, aroon, vortex, fisher_transform, choppiness, klinger, ultimate_oscillator, and 180+ more",
                        "maxItems": 20,
                        "minItems": 1,
                        "items": {
                          "type": "object",
                          "required": ["indicator"],
                          "properties": {
                            "id": {
                              "type": "string",
                              "description": "Custom identifier for tracking this indicator result",
                              "example": "rsi_14_custom"
                            },
                            "indicator": {
                              "type": "string",
                              "description": "Indicator name. Popular: rsi, macd, bbands, ema, sma, stoch, willr, adx, cci, supertrend, ichimoku, sar, ao, obv, atr, keltner, donchian, tema, dema, kama, mama, roc, mfi, aroon, vortex, fisher_transform, choppiness, klinger, ultimate_oscillator, etc.",
                              "example": "rsi"
                            },
                            "period": {
                              "type": "integer",
                              "description": "Period for the indicator (where applicable)",
                              "minimum": 1,
                              "maximum": 1000,
                              "example": 14
                            },
                            "fast_period": {
                              "type": "integer",
                              "description": "Fast period for MACD and similar indicators",
                              "example": 12
                            },
                            "slow_period": {
                              "type": "integer",
                              "description": "Slow period for MACD and similar indicators",
                              "example": 26
                            },
                            "signal_period": {
                              "type": "integer",
                              "description": "Signal period for MACD",
                              "example": 9
                            },
                            "stddev": {
                              "type": "number",
                              "description": "Standard deviation for Bollinger Bands",
                              "example": 2.0
                            },
                            "multiplier": {
                              "type": "number",
                              "description": "Multiplier for Supertrend and similar indicators",
                              "example": 3.0
                            },
                            "k_period": {
                              "type": "integer",
                              "description": "K period for Stochastic oscillator",
                              "example": 14
                            },
                            "d_period": {
                              "type": "integer",
                              "description": "D period for Stochastic oscillator",
                              "example": 3
                            },
                            "backtrack": {
                              "type": "integer",
                              "description": "Number of candles to backtrack (0-50)",
                              "minimum": 0,
                              "maximum": 50,
                              "default": 0
                            },
                            "results": {
                              "type": "integer",
                              "description": "Number of historical results to return (1-20)",
                              "minimum": 1,
                              "maximum": 20,
                              "default": 1
                            }
                          }
                        },
                        "example": [
                          {
                            "id": "rsi_14",
                            "indicator": "rsi",
                            "period": 14
                          },
                          {
                            "id": "supertrend_custom",
                            "indicator": "supertrend",
                            "period": 10,
                            "multiplier": 3.0
                          },
                          {
                            "id": "ichimoku_cloud",
                            "indicator": "ichimoku"
                          }
                        ]
                      }
                    }
                  }
                }
              },
              "examples": {
                "bonk_advanced_analysis": {
                  "summary": "BONK/USDT Advanced Analysis",
                  "description": "Advanced indicators for BONK memecoin analysis as requested",
                  "value": {
                    "secret": "YOUR_TAAPI_SECRET",
                    "construct": {
                      "exchange": "kucoin",
                      "symbol": "BONK/USDT",
                      "interval": "4h",
                      "indicators": [
                        {"id": "supertrend", "indicator": "supertrend", "period": 10, "multiplier": 3.0},
                        {"id": "fisher_transform", "indicator": "fisher_transform", "period": 10},
                        {"id": "vortex", "indicator": "vortex", "period": 14},
                        {"id": "aroon", "indicator": "aroon", "period": 14},
                        {"id": "cmf", "indicator": "cmf", "period": 20},
                        {"id": "choppiness", "indicator": "choppiness", "period": 14},
                        {"id": "klinger", "indicator": "klinger"},
                        {"id": "donchian", "indicator": "donchian", "period": 20},
                        {"id": "ultimate_oscillator", "indicator": "ultimate_oscillator"}
                      ]
                    }
                  }
                },
                "comprehensive_btc_analysis": {
                  "summary": "Comprehensive BTC Analysis",
                  "description": "Mix of popular and advanced indicators for thorough BTC market analysis",
                  "value": {
                    "secret": "YOUR_TAAPI_SECRET",
                    "construct": {
                      "exchange": "binance",
                      "symbol": "BTC/USDT",
                      "interval": "1h",
                      "indicators": [
                        {"id": "rsi_14", "indicator": "rsi", "period": 14},
                        {"id": "macd_default", "indicator": "macd"},
                        {"id": "bb_20", "indicator": "bbands", "period": 20, "stddev": 2.0},
                        {"id": "supertrend", "indicator": "supertrend", "period": 10, "multiplier": 3.0},
                        {"id": "ichimoku", "indicator": "ichimoku"},
                        {"id": "ema_20", "indicator": "ema", "period": 20},
                        {"id": "ema_50", "indicator": "ema", "period": 50},
                        {"id": "obv", "indicator": "obv"},
                        {"id": "atr", "indicator": "atr", "period": 14}
                      ]
                    }
                  }
                },
                "eth_momentum_focus": {
                  "summary": "ETH Momentum Analysis",
                  "description": "Focus on momentum and oscillator indicators for Ethereum",
                  "value": {
                    "secret": "YOUR_TAAPI_SECRET",
                    "construct": {
                      "exchange": "binance",
                      "symbol": "ETH/USDT",
                      "interval": "4h",
                      "indicators": [
                        {"id": "rsi_21", "indicator": "rsi", "period": 21},
                        {"id": "stoch_fast", "indicator": "stoch", "k_period": 14, "d_period": 3},
                        {"id": "willr", "indicator": "willr", "period": 14},
                        {"id": "cci", "indicator": "cci", "period": 20},
                        {"id": "awesome_osc", "indicator": "ao"},
                        {"id": "roc", "indicator": "roc", "period": 12},
                        {"id": "mfi", "indicator": "mfi", "period": 14}
                      ]
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful bulk indicators response from taapi.io",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "description": "The indicator ID from the request"
                          },
                          "result": {
                            "type": "object",
                            "description": "The indicator calculation result(s)"
                          },
                          "errors": {
                            "type": "array",
                            "description": "Any errors for this specific indicator"
                          }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "bonk_advanced_response": {
                    "summary": "BONK Advanced Indicators Response",
                    "value": {
                      "data": [
                        {
                          "id": "supertrend",
                          "result": {"value": 0.000012, "trend": "bullish"},
                          "errors": []
                        },
                        {
                          "id": "fisher_transform",
                          "result": {"value": 0.85},
                          "errors": []
                        },
                        {
                          "id": "vortex",
                          "result": {"vi_plus": 1.15, "vi_minus": 0.87},
                          "errors": []
                        },
                        {
                          "id": "aroon",
                          "result": {"aroon_up": 78.57, "aroon_down": 21.43, "aroon_oscillator": 57.14},
                          "errors": []
                        }
                      ]
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid parameters",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "JSON body required"
                    }
                  }
                }
              }
            }
          },
          "503": {
            "description": "Service Unavailable - Taapi.io API error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Taapi.io API error: Rate limit exceeded"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TaapiProxyRequest": {
        "type": "object",
        "required": ["secret", "construct"],
        "properties": {
          "secret": {
            "type": "string",
            "description": "Your taapi.io API key"
          },
          "construct": {
            "$ref": "#/components/schemas/TaapiConstruct"
          }
        }
      },
      "TaapiConstruct": {
        "type": "object",
        "required": ["exchange", "symbol", "interval", "indicators"],
        "properties": {
          "exchange": {"type": "string"},
          "symbol": {"type": "string"},
          "interval": {"type": "string"},
          "type": {"type": "string"},
          "indicators": {
            "type": "array",
            "items": {"$ref": "#/components/schemas/TaapiIndicatorSpec"}
          }
        }
      },
      "TaapiIndicatorSpec": {
        "type": "object",
        "required": ["indicator"],
        "properties": {
          "id": {"type": "string"},
          "indicator": {"type": "string"},
          "period": {"type": "integer"},
          "fast_period": {"type": "integer"},
          "slow_period": {"type": "integer"},
          "signal_period": {"type": "integer"},
          "stddev": {"type": "number"},
          "multiplier": {"type": "number"},
          "k_period": {"type": "integer"},
          "d_period": {"type": "integer"},
          "backtrack": {"type": "integer"},
          "results": {"type": "integer"}
        }
      }
    }
  }
}