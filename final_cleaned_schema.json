    "/api/chatgpt/opportunity-scanner": {
      "get": {
        "description": "Get AI-powered opportunity scanner for high-probability trading setups",
        "operationId": "getChatGPTOpportunityScanner",
        "parameters": [
          {
            "name": "risk_level",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["conservative", "moderate", "aggressive"],
              "default": "moderate"
            },
            "description": "Risk tolerance for opportunity scanning"
          },
          {
            "name": "timeframe",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["scalp", "short_term", "medium_term", "swing"],
              "default": "short_term"
            },
            "description": "Trading timeframe preference"
          }
        ],
